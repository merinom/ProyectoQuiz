<!--Cajetín de búsqueda -->

<form method="get" action="/quizes">
	Buscar pregunta: 
    <input type="text" name="busqueda" />
    <input type="submit" value="Buscar" />
</form>
<form method="get" action="/owner">
	Buscar usuario: 
    <input type="text" name="owner" />
    <input type="submit" value="Buscar" />
</form>
<form method="get" action="/ownerq">
	Buscar pregunta por usuario: 
    <input type="text" name="ownerq" />
    <input type="submit" value="Buscar" />
</form>

<table>
	
	<%	for (var i=0; i<quizes.length; i++) { %>
			<tr>
				<td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
				</td>
				<!-- Sólo con autorización -->
				<% if(session.user) {
				   if (session.user.isAdmin || session.user.id === quizes[i].UserId) { %>
					<td><a href="/quizes/<%= quizes[i].id %>/edit">
						<button>editar</button></a>
					</td>
					<td>
						<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
							<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
						</form>
					</td>
				<% } %>
				<!-- ///////////////////// -->
			</tr>
		<% } %>
	<% } %>

</table>
<p>

<!-- Sólo con autorización -->
<% if (session.user) { %>
	<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>